    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "windows": {
                "command": "fake run build.fsx"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Single File",
            "type": "shell",
            "windows": {
                "command": "fake build -t SinglePost ${file}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}